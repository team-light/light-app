<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="トップ画面（デモ）"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fab_text_setNet"
                android:textSize="22sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton10"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="netSet"
                app:backgroundTint="#00E0C7"
                app:srcCompat="@android:drawable/ic_menu_preferences" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="right"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/net"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/net"
            app:layout_constraintTop_toBottomOf="@+id/net">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fab_text_info"
                android:textSize="22sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton11"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="infofab"
                app:backgroundTint="#00E0C7"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/train"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/info"
            app:layout_constraintStart_toStartOf="@+id/info"
            app:layout_constraintTop_toTopOf="@+id/info">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fab_text_train"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="#00E0C7"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_launcher_background" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hazard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/info"
            app:layout_constraintStart_toStartOf="@+id/info"
            app:layout_constraintTop_toTopOf="@+id/info">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fab_text_hazard"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton13"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="pushHazardFab"
                app:backgroundTint="#00E0C7"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/info"
            app:layout_constraintStart_toStartOf="@+id/info"
            app:layout_constraintTop_toTopOf="@+id/info">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fab_text_map"
                android:textSize="18sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="viewGIS"
                app:backgroundTint="#00E0C7"
                app:fabSize="mini"
                app:srcCompat="@mipmap/ic_launcher_round" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="right"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/net"
            app:layout_constraintStart_toStartOf="@+id/net"
            app:layout_constraintTop_toBottomOf="@+id/info">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fab_text_close"
                android:textSize="22sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton15"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="closeApp"
                app:backgroundTint="@color/colorAccent"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
